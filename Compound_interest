#include <stdio.h>
#include <math.h>
int main()
{
    float p , t , r , ci;
    printf("Enter principle:\n");
    scanf ("%f",&p);
    printf("Enter time:\n");
    scanf("%f",&t);
    printf("Enter rate:\n");
    scanf("%f",&r);
    printf("Enter number :\n");
    scanf("%f",&r);
    ci=p*pow((1+r/100),t);
    printf("Compound Interest:\n%f",ci);
    return 0;
}
